---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero_sponsor from '~/components/widgets/Hero_sponsor.astro';
import Layout from '~/layouts/PageLayout.astro';
import FundraiseThermometer from '~/components/widgets/FundraiseThermometer.astro';

const metadata = {
  title: 'Contact Us/Sponsorship',
};
---

<Layout metadata={metadata}>
  <Features3
    title="Contact Us!"
    columns={3}
    items={[
      {
        title: "Email us at dbf@jhu.edu",
        description: "We'll get back to you as soon as possible!",
        icon: "tabler:mail",
      },
      {
        title: "Join our Discord at discord.gg/E2aAKby9D8",
        description: "Check out what we do behind the scenes!",
        icon: "tabler:brand-discord",
      },
      {
        title: "Follow us on Instagram @jhu_dbf",
        description: "DM us with a question!",
        icon: "tabler:brand-instagram",
      },
    ]}
  >
  </Features3>

  <Hero_sponsor
    actions={[
      {
        variant: 'primary',
        text: 'Download Sponsorship Information',
        href: '/assets/dbf_sponsorshipleaflet_25-26.pdf',
        target: '_blank',
        icon: 'tabler:download',
      }
    ]}>
    <Fragment slot="title">
      Sponsor Us!
    </Fragment>

    <Fragment slot="subtitle">
      Please consider supporting us. Our team relies entirely on the monetary and material donations from individuals and organizations like yours to offer opportunities and experiences to the next generation of doers.
    </Fragment>
  </Hero_sponsor>

  <FundraiseThermometer />
  
  <Features2
    title="Join a Weekly Meeting!"
    tagline=""
    columns={4}
    items={[
      {
        title: 'Tuesday 7-9pm',
        description: 'DBF lab / Makerspace',
      },
      {
        title: 'Thursday 7-9pm',
        description: 'DBF lab / Wind-tunnel lab / Makerspace',
      },
      {
        title: 'Saturday 11am-',
        description: 'DBF lab / Makerspace',
      },
      {
        title: 'Sunday 10am-',
        description: 'Fly day at local RC airfield',
      },
    ]}
  />
</Layout>
